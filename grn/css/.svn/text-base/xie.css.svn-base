body,html{
    overflow-x: hidden;
}
.underline{
    width: 35px;
    height: 4px;
    background:#4eb9e3;
}
.bg{
    background:#4eb9e3;
    margin-top: 57px;
}
@media (min-width: 768px){
    .bg{
        background:transparent;
        margin-top:0;
    }
}
.xieBg{
    background:transparent;
    padding-top: 0;
    padding-bottom: 0;
}
.introduce{
    padding-left: 0;
    padding-right: 0;
    text-align: left;
}
@media (min-width: 768px){
    .xieBg{
        background:#4eb9e3;
        padding-top: 70px;
        padding-bottom: 80px;
    }
    .introduce{
        padding-left: 45px;
        padding-right: 45px;
        text-align: center;
    }
}
/*banner*/
.milestoneBanner{
    padding: 0;
    margin: 0;
}
/*标题*/
.sport_brand_title{
    margin-top: 38px;
    margin-bottom: 30px;
}
.sport_brand_title h4{
    font-size: 22px;
    color: #545454;
}
@media (max-width: 768px){
   .sport_brand_title_team{
       margin-bottom: 12px;
   }
}
@media (min-width: 768px){
    .sport_brand_title{
        margin-top: 61px;
        margin-bottom: 36px;
    }
}
@media (min-width: 992px){
    .sport_brand_title{
        margin-top: 89px;
        margin-bottom: 64px;
    }
}
.sport_brand_title .underline{
    margin-top: 20px;
}
/*名鞋库内部导航*/
.jie_nav{
    letter-spacing: 3px;
    margin-bottom: 30px;
}
.jie_nav .now{
    color: #4eb9e3;
}
.jie_nav .go{
    color: #545454;
}
/*名鞋库图片部分*/
.jie{
    width: 49.6%;
    box-sizing: border-box;
    float: left;
    position: relative;
}
.xie{
    width: 49.6%;
    box-sizing: border-box;
    float: right;
    position: relative;
}
.img_border{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    border: #4eb9e3 3px solid;
    z-index: 1;
}
.logoBg{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    background: rgba(93,190,235,0.8);
}
.xie .logoBg img{
    width: 40%;
}
.jie .logoBg{
    color: #fff;
    height: 50px;
    line-height: 50px;
    font-size:17px;
    letter-spacing: 5px;
}
.xieM>img{
    margin-top: -57px;
}
.logoMBg{
    width: 100%;
}
.xieM .logoMBg img{
    width: 40%;
}
/*名鞋库简介*/
@media (max-width: 768px){
    .jie_title{
        margin-bottom: 16px;
    }
}
.article{
    margin-bottom: 34px;
}
.article p{
    margin-bottom: 16px;
}
.visit_us{
    width: 150px;
    height: 27px;
    background:#4eb9e3;
    text-align: center;
    margin: 0 auto;
    letter-spacing: 3px;
    line-height: 27px;
}
.visit_us a{
    color: #fff;
    font-size: 12px;
}
@media (min-width: 768px){
    .visit_us{
        width: 200px;
        height: 36px;
        letter-spacing: 5px;
        line-height: 36px;
    }
    .visit_us a{
        font-size: 14px;
    }
}
.leaders_main_box{
    margin-bottom: 13px;
}
.leaders_main_title{
    margin-top: 15px;
    margin-bottom: 9px;
}
.leaders_main_title b{
    font-size: 15px;
    letter-spacing: 6px;
    margin-right: 20px;
}
.leaders_main_title span{
    font-size: 12px;
    color:#4fb8e9;
    font-weight: 900;
}
@media (min-width: 768px){
    .leaders_main_title{
        margin-top: 50px;
        margin-bottom: 50px;
    }
    .leaders_main_title b{
        font-size: 18px;
        letter-spacing: 10px;
    }
    .leaders_main_title span{
        font-size: 12px;
        letter-spacing: 5px;
    }
}
.main_leader_boxes{
    margin-bottom: 20px;
}
.xie_team{
    margin-top: -38px;
}
@media (max-width: 768px){
    .xie_team{
        margin-top: 0;
    }
}